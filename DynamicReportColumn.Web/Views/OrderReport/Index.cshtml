@using DynamicReportColumn.Web.Models;

@model OrderReportViewModel

<br />
<h3>Order Report</h3>

@using (Html.BeginForm("IndexResult", "OrderReport", FormMethod.Post, new { target = "_blank" }))
{
    <div class="card-container">
        <div class="form-group row">
            <div class="col-md-4">
                <input checked="checked" id="dateType" name="dateType" type="radio" value="1" />  &nbsp;&nbsp;
                <label class="color-green">Order Date</label>
                <div class="width80">
                    @Html.TextBoxFor(a => a.OrderReportIndex.OrderDateFrom,
                        new { type = "date", @Value = "2019-05-11" })
                </div>
            </div>

            <div class="col-md-4">
                <label class="color-green">To</label>
                <div class="width80">
                    @Html.TextBoxFor(a => a.OrderReportIndex.OrderDateTo,
                        new { type = "date", @Value = "2019-05-21" })
                </div>
            </div>
        </div>

        <div class="hr">
            <hr style="border-top: 1px solid rgba(0, 0, 0, 0.1); border-bottom: 1px solid rgba(255, 255, 255, 0.3);" />
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label for="Format" class="control-label input-group color-green">
                    Format
                </label>
                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-default active">
                        <input type="radio" name="Format" id="Web" value="Web" checked>
                        Web
                    </label>
                </div>
            </div>
        </div>

        <div class="hr">
            <hr style="border-top: 1px solid rgba(0, 0, 0, 0.1); border-bottom: 1px solid rgba(255, 255, 255, 0.3);" />
        </div>

        @for (var i = 0; i < Model.ShownColumns.Count(); i++)
        {
            if (i == 0)
            {
                <div class="form-group row">
                    <div class="col-md-2">
                        @Html.LabelFor(a => a.ShownColumns)
                    </div>
                    <div class="col-md-2">
                        <label>
                            @Html.HiddenFor(a => a.ShownColumns[i].ColumnValue)
                            @Html.HiddenFor(a => a.ShownColumns[i].ColumnName)
                            @Html.CheckBoxFor(a => a.ShownColumns[i].IsTick, new { Style = "vertical-align:6px}" })
                            @Html.DisplayFor(a => a.ShownColumns[i].ColumnName)
                        </label>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group row">
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-2">
                        <label>
                            @Html.HiddenFor(a => a.ShownColumns[i].ColumnValue)
                            @Html.HiddenFor(a => a.ShownColumns[i].ColumnName)
                            @Html.CheckBoxFor(a => a.ShownColumns[i].IsTick, new { Style = "vertical-align:3px}" })
                            @Html.DisplayTextFor(a => a.ShownColumns[i].ColumnName)
                        </label>
                    </div>
                </div>
            }
        }

        <div class="form-group row">
            <div class="col-md-12">
                <button id="btnExport" name="Exportbutton" type="submit" class="btn btn-sm btn-success" value="Generate">
                    Generate
                </button>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script type="text/javascript">
    </script>
}
